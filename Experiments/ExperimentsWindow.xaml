<Window x:Class="Experiments.ExperimentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experiments"
        mc:Ignorable="d"
        Title="ExperimentsWindow" Height="410" Width="300">
    <Grid>
        
        <TextBlock Text="Выберите эксперимент:" />
        <ListBox x:Name="Experiments_List" Margin="10, 20, 0, 0" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="280"/>
        <Button Content="OK" Click="Ok_Button"  Margin="20, 0, 0, 10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Background="#FF00FFFF"/>
        <Button Content="Cancel" Click="Cancel_Button" Margin="0, 0, 20, 10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Background="#FF00FFFF"/>
    </Grid>
</Window>
